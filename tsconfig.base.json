{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@libs/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@libs/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@min-blog/data-access": [
        "libs/min-blog/data-access/src/index.ts"
      ],
      "@min-blog/ui": ["libs/min-blog/ui/src/index.ts"],
      "@min-blog/utils": ["libs/min-blog/utils/src/index.ts"],
      "@playground/data-access": ["libs/playground/data-access/src/index.ts"],
      "@playground/ui": ["libs/playground/ui/src/index.ts"],
      "@playground/utils": ["libs/playground/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
